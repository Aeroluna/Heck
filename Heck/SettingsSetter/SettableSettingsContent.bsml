<bg id='contentObject'>
  <vertical anchor-max-y='1.05' bg='round-rect-panel' horizontal-fit='PreferredSize' vertical-fit='PreferredSize'>
    <scroll-view preferred-height='50' preferred-width='120'>
      <macro.for-each hosts='contents'>
        <horizontal preferred-width='100'>
          <text text='~lefttext' align='Left' font-size='4'/>
          <text text='~righttext' align='Right' font-size='4'/>
        </horizontal>
      </macro.for-each>
    </scroll-view>
  </vertical>
</bg>
